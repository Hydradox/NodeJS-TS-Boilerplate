{
  "name": "nodejs-ts-boilerplate",
  "version": "1.0.0",
  "description": "Quick start boilerplate for NodeJS backend with TS",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "rollup -cw",
    "build": "rimraf dist && rollup -c",
    "pkg": "pkg dist/index.js --out-path dist/pkg --targets node16-win-x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hydradox/NodeJS-TS-Boilerplate.git"
  },
  "author": "Jaime Cantos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hydradox/NodeJS-TS-Boilerplate/issues"
  },
  "homepage": "https://github.com/Hydradox/NodeJS-TS-Boilerplate#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/node": "^20.4.0",
    "@types/prompts": "^2.4.4",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.3",
    "rollup-plugin-command": "^1.1.3",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-progress": "^1.1.2",
    "typescript": "^5.1.6"
  },
  "type": "module"
}
