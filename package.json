{
  "name": "nodejs-ts-boilerplate",
  "version": "1.0.0",
  "description": "Quick start boilerplate for NodeJS backend with TS",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:nodemon\"",
    "dev:webpack": "cross-env NODE_ENV=development webpack",
    "dev:nodemon": "cross-env NODE_ENV=development nodemon dist/**/*",
    "build": "rimraf dist && webpack",
    "pkg": "pkg dist/index.js --out-path dist/pkg --targets node16-win-x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hydradox/NodeJS-TS-Boilerplate.git"
  },
  "author": "Jaime Cantos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hydradox/NodeJS-TS-Boilerplate/issues"
  },
  "homepage": "https://github.com/Hydradox/NodeJS-TS-Boilerplate#readme",
  "devDependencies": {
    "@types/node": "^20.4.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.1.6",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
