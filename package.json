{
  "name": "nodejs-ts-boilerplate",
  "version": "1.0.0",
  "description": "Quick start boilerplate for NodeJS backend with TS",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "rimraf dist && tsc",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hydradox/NodeJS-TS-Boilerplate.git"
  },
  "author": "Jaime Cantos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hydradox/NodeJS-TS-Boilerplate/issues"
  },
  "homepage": "https://github.com/Hydradox/NodeJS-TS-Boilerplate#readme",
  "devDependencies": {
    "@types/node": "^20.4.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
